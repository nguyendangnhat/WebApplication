<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="navbar navbar-default sk-top-menu" role="navigation">
            <div class="container">
                @Html.Partial("_LoginPartial")
                <ul class="nav navbar-nav navbar-right sk-top-nav-desktop" style="position: relative;z-index: 9;">
                    <li>
                        <form action="/search" method="get" class="form-inline sk-search-in-nav">
                            <div class="form-group">
                                <input type="text" class="form-control sk-search-field" placeholder="Tìm kiếm" value="" name="query">
                            </div>
                            <button type="submit" class="sk-search-btn"><i class="fa fa-search"></i></button>
                        </form>
                    </li>
                    <li><a href="/cart"><i class="fa fa-shopping-cart"></i> <span class="cart-icon">0</span></a></li>
                </ul>
            </div>
        </div>
        <div class="mobile-logo-wrap text-center">
            <a class="" href="/">
                <img src="#" alt="Kidshop">
            </a>
        </div>
        <nav class="navbar navbar-default sk-main-menu">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <ul class="sk-top-nav-mobile" style="position: relative;z-index: 9;">
                        <li>
                            <form action="/search" method="get" class="form-inline sk-search-in-nav">
                                <div class="form-group sk-search-input">
                                    <input id="sk-input" type="text" class="form-control sk-search-field" placeholder="Tìm kiếm" value="" name="query">
                                </div>
                                <button id="sk-button" type="button" class="sk-search-btn"><i class="fa fa-search"></i></button>
                            </form>
                        </li>
                        <li><a href="/cart"><i class="fa fa-shopping-cart"></i> <span class="cart-icon">0</span></a></li>
                    </ul>
                </div>
                <a class="navbar-brand sk-logo-desktop" href="/">
                    <img src="#" alt="Kidshop">
                </a>
                <div class="navbar-collapse collapse sk-main-menu-inner">
                    <ul class="nav navbar-nav navbar-left">
                        <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                        <li>@Html.ActionLink("Giới thiệu", "About", "Home")</li>
                        <li>@Html.ActionLink("Dịch vụ", "Contact", "Home")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            @Html.ActionLink("Sản phẩm", "Index", "Product", routeValues: null, htmlAttributes: new { @class="dropdow-toggle", data_toggle="dropdown" })
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Tất cả sản phẩm", "Contact", "Product")</li>
                                <li>@Html.ActionLink("Bé trai", "Contact", "Product")</li>
                                <li>@Html.ActionLink("Bé gái", "Contact", "Product")</li>
                                <li>@Html.ActionLink("Phụ kiện", "Contact", "Product")</li>
                                <li>@Html.ActionLink("Khuyến mại", "Contact", "Product")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Tin tức", "News", "Home")</li>
                        <li>@Html.ActionLink("Liên hệ", "Contact", "Home")</li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- End Header -->

    <!-- Content -->
    <div class="container body-content">
        @RenderBody()
    </div>
    <!-- End Content -->

